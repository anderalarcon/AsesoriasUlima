<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/fondo_card_asesorias_proife">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/curso_asesoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programación Movil"
            android:textSize="23dp"


            android:fontFamily="@font/montserrat_black"
            android:textColor="#fd671a">

        </TextView>

        <TextView
            android:id="@+id/seccion_asesoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:background="@color/black"
            android:text="Sección: 801"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:id="@+id/dia_asesoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Días: Lunes"
            android:background="@color/black"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/white">

        </TextView>
        <TextView
            android:id="@+id/horario_asesoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:background="@color/black"
            android:textSize="20dp"
            android:text="Horario: 9-10pm"
            android:textColor="@color/white">

        </TextView>



    </LinearLayout>




</RelativeLayout>
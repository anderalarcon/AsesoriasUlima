<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ulimafondo"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

            <TextView
                android:id="@+id/tviCursoAsesoriaAlumnoDETALLE"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Programación Móvil"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#fd671a"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        <TextView
            android:id="@+id/tviSeccionAsesoriaAlumnoDETALLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Sección: 501"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#fd671a"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/tviProfesorAsesoriaAlumnoDETALLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#fd671a"
            android:text="Profesor: Hernan Quintana"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Asesorias:"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#fd671a"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tviListaAsesoriaAlumnoDETALLE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#fd671a"
                android:text="Miercoles y viernes 9-10 am, jueves 5-7 pm"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <Button
                android:id="@+id/butEnlaceAsesoriaAlumnoDETALLE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Zoom"

                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="==================================="
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_weight="1">

        </ListView>

        <Button
            android:id="@+id/butRegistrarAsesoria"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/montserrat_bold"
            android:backgroundTint="#fd671a"
            android:text="Registrar asesoria"/>

        <Button
            android:id="@+id/butVolverAsesorias"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/montserrat_bold"
            android:backgroundTint="#fd671a"
            android:text="Regresar"/>


    </LinearLayout>




</LinearLayout>
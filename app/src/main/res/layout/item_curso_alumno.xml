<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/ulimafondo"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:id="@+id/tviCursoAsesoriaAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programación Móvil"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#fd671a"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/tviSeccionAsesoriaAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:text="Sección: 501"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/tviProfesorAsesoriaAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:text="Profesor: Hernan Quintana"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

      <!--  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:text="Asesorias:"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#fd671a"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    -->
        <TextView
            android:id="@+id/tviListaAsesoriaAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:text="Miercoles y viernes 9-10 am, jueves 5-7 pm"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


    </LinearLayout>


</RelativeLayout>
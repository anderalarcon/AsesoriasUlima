<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/ulimafondo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tviCursoRegistroAlumno"
            android:layout_width="match_parent"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#fd671a"
            android:layout_height="wrap_content"
            android:text="Programación Móvil"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
             />

        <TextView
            android:id="@+id/tviMotivoAsesoriaREGISTRO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="Motivo: Dudas del trabajo"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        <TextView
            android:id="@+id/tviSeccionRegistroAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="Sección: 501"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/tviProfesorRegistroAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="Profesor: Hernan Quintana"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tviFechaAsesoriaAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asesoria: Lunes, 6-7 pm"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/tviOrdenAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orden: 10"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


        </LinearLayout>

        <Button
            android:id="@+id/butEnlaceAsesoriaAlumnoDETALLE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="100dp"
            android:minHeight="48dp"
            android:text="enlace a Zoom"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


    </LinearLayout>



</RelativeLayout>